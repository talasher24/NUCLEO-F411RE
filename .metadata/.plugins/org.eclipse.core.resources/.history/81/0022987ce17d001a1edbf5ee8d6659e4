#ifndef Buffer_H__

#define Buffer_H__

#include "stm32f4xx_hal.h"
#include <stdbool.h>

#define BUFFER_SIZE 1000

typedef struct {
	uint8_t _p_rx_buffer[BUFFER_SIZE];
	uint8_t _rx_index;
	uint8_t _rx_single_char;
	bool _rx_ready_command;
	uint8_t _p_tx_buffer[BUFFER_SIZE];
}s_Buff;

void bufferInit(s_Buff *buffer);



#endif // Buffer_H__
